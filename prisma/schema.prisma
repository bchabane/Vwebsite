// Prisma schema for storing demo request submissions

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Submission {
  id           String   @id @default(cuid())
  fullName     String
  company      String
  role         String
  email        String
  assetType    String
  portfolioSize String
  message      String?
  createdAt    DateTime @default(now())
  ipAddress    String?

  @@index([email])
  @@index([createdAt])
}

